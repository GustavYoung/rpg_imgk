#!/bin/bash
cd /home/uslu/rpg_imgk/
resolution=$(sudo fbset -s | grep -oP '[[:digit:]]{1,4}x[[:digit:]]{1,4}')
a="1920x1080 "
b="1280x720 "
c="720x480 "
d="320x240 "

echo "$resolution"

if [ "$resolution" == "$a" ]
    then
    while true
     do
       omxiv -T blend -l 30 -k 1080.png;
    done
fi
if [ "$resolution" == "$b" ]
    then
    while true
     do
       omxiv -T blend -l 30 -k 720.png;
    done
fi
if [ "$resolution" == "$c" ]
    then
    while true
     do
       omxiv -T blend -l 30 -k 480.png;
    done
fi
if [ "$resolution" == "$d" ]
then exit



